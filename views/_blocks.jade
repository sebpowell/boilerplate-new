mixin icon(opts)
	svg(style="width: #{opts.size}; height: #{opts.size}" class="#{opts.class}")
		use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-#{opts.name}")


mixin verified(text)
	.tooltip
		.verified
			+icon({"name": "tick-simple"}) 
			.verified-label Verified

		.tooltip-content This data has been verified by Airfinity.